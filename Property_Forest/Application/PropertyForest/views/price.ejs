        </section>
        <!-- Main content -->
        <section class="content">
          <!-- Your Page Content Here -->
<div class="row">
  <div class="col-md-12">
    <!-- Form -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Flat Information</h3>
      </div><!-- /.box-header -->
      <!-- form start -->
        <div class="box-body">
          <div class="row">
          <div class="col-md-3">
              <div class="form-group">
                <label>Postal Code</label>
                <input id="postal" type="number" class="form-control" placeholder="">
              </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label>Flat Type</label>
              <select id="flat_type" class="form-control">
              </select>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label>Town</label>
              <select id="towns" class="form-control">
              </select>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label>Size</label>
              <input id="size" type="number" class="form-control" placeholder="">
            </div>
          </div>
        </div>
      </div><!-- /.box-body -->
      <div class="box-footer">
<button type="submit" onclick="formSubmit()" class="btn btn-primary pull-right">Submit</button>
      </div><!-- /.box-footer -->
      <div id="inputLoader" class="overlay">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
    </div>
  </div>
</div>
<div id="result">
<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Address</h3>
      </div><!-- /.box-header -->
      <!-- form start -->
        <div class="box-body">
          <p>
            <h4 id="add"></h4>
          </p>
          <div id='mapImg'>
          </div>
        </div>
        <div id="addLoader" class="overlay">
          <i class="fa fa-refresh fa-spin"></i>
        </div>
      </div><!-- /.box -->
  </div>
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Price</h3>
      </div><!-- /.box-header -->
      <!-- form start -->
        <div class="box-body">
          <table class="table table-bordered" style="width:100%">
            <tr>
              <td style="width: 250px"><b>Estimated Price:</b></td>
              <td><span id="price"><span></td>
            </tr>
            <tr>
              <td style="width:250px"><b>Estimated Price (Per Sqm):</b></td>
              <td><span id="price_sqm"><span></td>
            </tr>
          </table>
        </br>
          <div id='chartImg'>
            <br><br><br><br><br><br><br><br><br><br><br><br>
          </div>
        </div>
        <div id="priceLoader" class="overlay">
          <i class="fa fa-refresh fa-spin"></i>
        </div>
      </div><!-- /.box -->
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Nearby MRT/LRT Stations</h3>
      </div><!-- /.box-header -->
      <!-- form start -->
        <div class="box-body">
          <table class="table table-bordered" style="width:100%">
            <tr>
              <td style="width: 180px"><b>Station Code:</b></td>
              <td><span id="stCode"><span></td>
            </tr>
            <tr>
              <td style="width:180px"><b>Station Name:</b></td>
              <td><span id="stName"><span></td>
            </tr>
            <tr>
              <td style="width: 180px"><b>Station Opened(ing) Date:</b></td>
              <td><span id="opening"><span></td>
            </tr>
            <tr>
              <td style="width: 180px"><b>Distance(meters):</b></td>
              <td><span id="stDistance"><span></td>
            </tr>
          </table>
        </div>
        <div id="mrtLoader" class="overlay">
          <i class="fa fa-refresh fa-spin"></i>
        </div>
      </div><!-- /.box -->
  </div>
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Schools Within 1KM</h3>
      </div><!-- /.box-header -->
      <!-- form start -->
        <div class="box-body">
          <div class="box-body">
            * Top primary schools are higlighted in <span style="color:red">red</span>.
            <table  class="table table-bordered" style="width:100%">
              <thead>
              <tr>
                <th>School Name</td>
                <th>Distance (meters)</td>
              </tr>
            </thead>
              <tbody id="schTable">
              </tbody>
            </table>
        </div>
        <div id="schLoader" class="overlay">
          <i class="fa fa-refresh fa-spin"></i>
        </div>
      </div><!-- /.box -->
  </div>
</div>
</div>
